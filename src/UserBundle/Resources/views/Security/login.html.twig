{% extends "App::Admin/index.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="offset4 span4">
    
    <h1>Connexion</h1>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username"><strong>{{ 'security.login.username'|trans }}</strong></label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password"><strong>{{ 'security.login.password'|trans }}</strong></label>
    <input type="password" id="password" name="_password" required="required" />
   
    <br/>

    <label for="remember_me" class="ckecbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        {{ 'security.login.remember_me'|trans }}
    </label>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn" />
</form>
{% endblock fos_user_content %}
