{% extends '::base.html.twig' %}

{% block headers %}
    <title>{% block title %}{% block subtitle '' %} &mdash; KnpRadBundle{% endblock %}</title>
    <meta name="description" content="{% block description '' %}">
{% endblock headers %}

{% block flashes '' %}

{% block stylesheets %}
	{{parent()}}
	{% 
		stylesheets 
		'bundles/app/css/*.less'
		filter="lessphp, cssrewrite, ?minify_css"
	%}

		<link rel="stylesheet" href="{{asset_url}}" media="screen" >

	{% endstylesheets %}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{%
		javascripts
		'bundles/app/js/src/*.js'
		'bundles/app/js/main.js'
		filter="?minify_js"
	%}
		<script src="{{asset_url}}"></script>
	{% endjavascripts %}

{% endblock %}

{% block body %}
	
	<header>
		{% block header %}
			{% block slider %}
				<div id="slider" data-slider="{{slider_assets()}}">
					<div class="slider-content"></div>
				</div>
				<div class="arrow-left hidden-phone"></div>
				<div class="arrow-right hidden-phone"></div>
			{% endblock %}
			<div class="unit">
				{% block unit %}
					<img src="{{asset('bundles/app/images/header/text.png')}}"
						 alt="Réseaux AVEC - Allier Vellay ECO construction" />
				{% endblock %}
			</div>
			<nav id="menu" role="navigation">
				{% block menu %}
					{% include 'App::_menu.html.twig' %}
				{% endblock %}
			</nav>
		{% endblock %}
	</header>

	<div class="container main-container">
		{% block flash %}
			 {% flashes %}
		        <div class="flashes alert alert-{{ type }}">
		            <button type="button" class="close" data-dismiss="alert">&times;</button>
		            {{ message }}
		        </div>
		    {% endflashes %}
		{% endblock %}
		{% block container %}
        	<div class="row content">
        	{% block content %}
        		<div class="span3">
        			{% block sidebar '' %}
        		</div>
        		<div class="span9">
        			{% block page '' %}
        		</div>
       		{% endblock %}
        	</div>
        {% endblock %}
    </div>

	<footer>
		<div class="container">
			{% block footer %}
			    <p class="footer-up">
			    	{% block footer_up %}
				    	CE SITE VOUS EST PROPOSÉ PAR <br />
				    	<strong>Réseau AVEC</strong> <br />
				    	chemin des Grandes 43100 VIEILLE BRIOUDE <br />
				    	Répondeur - fax : 09 72 11 51 83 - contact@reseaux-avec.fr
				    {% endblock %}
			    </p>
			    <p class="footer-down">
			    	{% block footer_down %}
				    	copyright © 2011 Tous droits réservés. - Mentions légales - 
				    	Concepteur et administrateur du site : Webs Generation Internet www.webs-creation-logo.fr
				    {% endblock %}
			   	</p>
			{% endblock %}
		</div>
	</footer>

{% endblock %}
