{% extends 'App::layout.html.twig' %}

{% block title 'Administration - Réseau AVEC' %}

{% block unit %}
	<img src="{{asset('bundles/app/images/header/text_admin.png')}}"
		 alt="Éspace d'administration"/>
{% endblock %}

{% block menu %}
	{% include 'App::Admin/_menu.html.twig' %}
{% endblock %}

{% block container %}
	<nav class="fast-nav">
		{% block navigation '' %}
	</nav>

	{% block content %}

		<h1>Bienvenue !</h1>

		<p>
			Veuillez choisir une séction du site à administrer.
		</p>

		<ul class="thumbnails">

			<li class="span4 thumbnail">
				<a href="{{path('app_page_index')}}">
					<div class="caption">
						<h3>Vos pages</h3>
						<p>
							Vous pouvez administrer l'itégralité de votre
							contenue text en accédant à la liste de vos pages.
						</p>
					</div>
				</a>
			</li>

			<li class="span4 thumbnail">
				<a href="{{path('app_news_index')}}">
					<div class="caption">
						<h3>Vos Actualités</h3>
						<p>
							Vous pouvez rajouter et éditer vos actualités.
						</p>
					</div>
				</a>
			</li>

			<li class="span4 thumbnail">
				<a href="{{ path('app_mediaCategory_index') }}">
					<div class="caption">
						<h3>Vos catégories de galerie</h3>
						<p>
							Rajoutez, modifiez vos catégories pour votre galerie.
						</p>
					</div>
				</a>
			</li>

			<li class="span4 thumbnail">
				<a href="{{ path('app_image_index') }}">
					<div class="caption">
						<h3>Vos Images</h3>
						<p>
							Rajoutez des images dans vottre galerie.
						</p>
					</div>
				</a>
			</li>

			<li class="span4 thumbnail">
				<a href="{{ path('app_video_index') }}">
					<div class="caption">
						<h3>Vos vidéos</h3>
						<p>
							Rajoutez des vidéos dans votre galerie. 
						</p>
					</div>
				</a>
			</li>

		</ul>

	{% endblock %}

	<nav class="fast-nav">
		{{block('navigation')}}
	</nav>

{% endblock %}

{% block footer_up %}
	Administration Réseaux AVEC. Proposé par Webs Génération Internet.
{% endblock %}